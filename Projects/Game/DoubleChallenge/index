    <!-- 引入粒子效果库 -->
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        // 游戏配置
        const gameConfig = {
            difficulties: {
                easy: {
                    targetSpawnRate: 1500,
                    obstacleSpawnRate: 2000,
                    gameSpeed: 2,
                    powerupSpawnRate: 10000
                },
                medium: {
                    targetSpawnRate: 1200,
                    obstacleSpawnRate: 1500,
                    gameSpeed: 3,
                    powerupSpawnRate: 15000
                },
                hard: {
                    targetSpawnRate: 800,
                    obstacleSpawnRate: 1000,
                    gameSpeed: 4,
                    powerupSpawnRate: 20000
                }
            },
            currentDifficulty: 'easy',
            score: 0,
            combo: 0,
            level: 1,
            lives: 3,
            playerX: 0,
            targets: [],
            obstacles: [],
            powerups: [],
            gameActive: false,
            timerInterval: null,
            animationId: null,
            lastTargetSpawn: 0,
            lastObstacleSpawn: 0,
            lastPowerupSpawn: 0,
            gameSpeed: 2,
            targetSpawnRate: 1500,
            obstacleSpawnRate: 2000,
            powerupSpawnRate: 10000,
            maxCombo: 0,
            shieldActive: false,
            slowActive: false,
            soundEnabled: true
        };

        // DOM元素
        const gameArea = document.getElementById('gameArea');
        const player = document.getElementById('player');
        const scoreElement = document.getElementById('score');
        const comboCountElement = document.getElementById('comboCount');
        const levelElement = document.getElementById('level');
        const livesElement = document.getElementById('lives');
        const progressBar = document.getElementById('progressBar');
        const startBtn = document.getElementById('startBtn');
        const restartBtn = document.getElementById('restartBtn');
        const gameOverlay = document.getElementById('gameOverlay');
        const finalScore = document.getElementById('finalScore');
        const finalLevel = document.getElementById('finalLevel');
        const finalCombo = document.getElementById('finalCombo');
        const playAgainBtn = document.getElementById('playAgainBtn');
        const changeDifficultyBtn = document.getElementById('changeDifficultyBtn');
        const levelUpElement = document.getElementById('levelUp');
        const shieldEffect = document.getElementById('shieldEffect');
        const soundControl = document.getElementById('soundControl');
        const slowIndicator = document.getElementById('slowIndicator');
        const shieldIndicator = document.getElementById('shieldIndicator');

        // 音频上下文
        let audioContext;
        try {
            audioContext = new (window.AudioContext || window.webkitAudioContext)();
        } catch (e) {
            console.log('Web Audio API is not supported in this browser');
            gameConfig.soundEnabled = false;
            soundControl.style.display = 'none';
        }

        // 初始化游戏
        function initGame() {
            // 重置游戏状态
            gameConfig.score = 0;
            gameConfig.combo = 0;
            gameConfig.level = 1;
            gameConfig.lives = 3;
            gameConfig.targets = [];
            gameConfig.obstacles = [];
            gameConfig.powerups = [];
            gameConfig.maxCombo = 0;
            gameConfig.shieldActive = false;
            gameConfig.slowActive = false;

            // 更新难度设置
            const difficulty = gameConfig.difficulties[gameConfig.currentDifficulty];
            gameConfig.gameSpeed = difficulty.gameSpeed;
            gameConfig.targetSpawnRate = difficulty.targetSpawnRate;
            gameConfig.obstacleSpawnRate = difficulty.obstacleSpawnRate;
            gameConfig.powerupSpawnRate = difficulty.powerupSpawnRate;

            // 更新UI
            updateStats();
            progressBar.style.width = '0%';

            // 重置玩家位置
            gameConfig.playerX = gameArea.offsetWidth / 2 - player.offsetWidth / 2;
            player.style.left = gameConfig.playerX + 'px';

            // 清除所有游戏元素
            clearGameElements();

            // 隐藏游戏结束界面
            gameOverlay.classList.remove('active');

            // 重置能力指示器
            slowIndicator.classList.remove('active');
            shieldIndicator.classList.remove('active');
            shieldEffect.style.display = 'none';
        }

        // 清除游戏元素
        function clearGameElements() {
            // 移除所有目标和障碍物
            document.querySelectorAll('.target, .obstacle, .powerup, .combo').forEach(el => {
                if (el.parentNode) {
                    el.parentNode.removeChild(el);
                }
            });
        }

        // 更新游戏统计信息
        function updateStats() {
            scoreElement.textContent = gameConfig.score;
            comboCountElement.textContent = gameConfig.combo;
            levelElement.textContent = gameConfig.level;
            livesElement.textContent = gameConfig.lives;
        }

        // 开始游戏
        function startGame() {
            if (gameConfig.gameActive) return;

            initGame();
            gameConfig.gameActive = true;
            gameConfig.lastTargetSpawn = performance.now();
            gameConfig.lastObstacleSpawn = performance.now();
            gameConfig.lastPowerupSpawn = performance.now();

            // 开始游戏循环
            gameLoop();
        }

        // 生成目标
        function spawnTarget(timestamp) {
            if (timestamp - gameConfig.lastTargetSpawn > gameConfig.targetSpawnRate) {
                const target = document.createElement('div');
                target.className = 'target';

                // 随机位置（但不要离边缘太近）
                const maxX = gameArea.offsetWidth - target.offsetWidth - 20;
                const x = 20 + Math.random() * maxX;
                const y = 20 + Math.random() * (gameArea.offsetHeight / 2);

                target.style.left = x + 'px';
                target.style.top = y + 'px';

                // 目标上的数字（得分值）
                const points = Math.min(5 + gameConfig.level, 15);
                target.textContent = points;
                target.dataset.points = points;

                // 添加点击事件
                target.addEventListener('click', hitTarget);

                gameArea.appendChild(target);
                gameConfig.targets.push({
                    element: target,
                    x: x,
                    y: y
                });

                gameConfig.lastTargetSpawn = timestamp;

                // 逐渐减少生成间隔
                gameConfig.targetSpawnRate = Math.max(500, gameConfig.targetSpawnRate - 10);
            }
        }

        // 生成障碍物
        function spawnObstacle(timestamp) {
            if (timestamp - gameConfig.lastObstacleSpawn > gameConfig.obstacleSpawnRate) {
                const obstacle = document.createElement('div');
                obstacle.className = 'obstacle';

                const x = Math.random() * (gameArea.offsetWidth - obstacle.offsetWidth);
                obstacle.style.left = x + 'px';
                obstacle.style.top = '0px';

                gameArea.appendChild(obstacle);
                gameConfig.obstacles.push({
                    element: obstacle,
                    x: x,
                    y: 0,
                    speed: gameConfig.gameSpeed + Math.random() * 2
                });

                gameConfig.lastObstacleSpawn = timestamp;

                // 逐渐减少生成间隔
                gameConfig.obstacleSpawnRate = Math.max(800, gameConfig.obstacleSpawnRate - 15);
            }
        }

        // 生成能力道具
        function spawnPowerup(timestamp) {
            if (timestamp - gameConfig.lastPowerupSpawn > gameConfig.powerupSpawnRate) {
                const powerup = document.createElement('div');
                const powerupType = Math.random() > 0.5 ? 'slow' : 'shield';
                powerup.className = `powerup ${powerupType}`;
                powerup.innerHTML = `<i class="fas fa-${powerupType === 'slow' ? 'clock' : 'shield-alt'}"></i>`;
                powerup.dataset.type = powerupType;

                const x = 20 + Math.random() * (gameArea.offsetWidth - 40);
                const y = 20 + Math.random() * (gameArea.offsetHeight / 2);

                powerup.style.left = x + 'px';
                powerup.style.top = y + 'px';

                // 添加点击事件
                powerup.addEventListener('click', collectPowerup);

                gameArea.appendChild(powerup);
                gameConfig.powerups.push({
                    element: powerup,
                    x: x,
                    y: y,
                    type: powerupType
                });

                gameConfig.lastPowerupSpawn = timestamp;
            }
        }

        // 击中目标
        function hitTarget(e) {
            if (!gameConfig.gameActive) return;

            const target = e.target;
            const points = parseInt(target.dataset.points);

            gameConfig.score += points;
            gameConfig.combo++;

            // 更新最高连击
            if (gameConfig.combo > gameConfig.maxCombo) {
                gameConfig.maxCombo = gameConfig.combo;
            }

            // 连击奖励
            if (gameConfig.combo >= 5) {
                const bonus = Math.floor(gameConfig.combo / 5) * 5;
                gameConfig.score += bonus;

                // 显示连击效果
                const comboElement = document.createElement('div');
                comboElement.className = 'combo';
                comboElement.textContent = `${gameConfig.combo} 连击! +${bonus}`;
                comboElement.style.left = (parseInt(target.style.left) + 20) + 'px';
                comboElement.style.top = (parseInt(target.style.top) + 20) + 'px';
                gameArea.appendChild(comboElement);

                comboElement.style.display = 'block';

                setTimeout(() => {
                    if (comboElement.parentNode) {
                        gameArea.removeChild(comboElement);
                    }
                }, 1000);
            }

            // 检查等级提升
            const newLevel = Math.floor(gameConfig.score / 100) + 1;
            if (newLevel > gameConfig.level) {
                gameConfig.level = newLevel;
                showLevelUp();

                // 每升一级增加游戏速度
                gameConfig.gameSpeed += 0.5;
            }

            updateStats();
            playSound('hit');

            // 移除目标
            gameArea.removeChild(target);
            gameConfig.targets = gameConfig.targets.filter(t => t.element !== target);
        }

        // 收集能力道具
        function collectPowerup(e) {
            if (!gameConfig.gameActive) return;

            const powerup = e.target.closest('.powerup');
            const type = powerup.dataset.type;

            if (type === 'slow') {
                activateSlow();
            } else if (type === 'shield') {
                activateShield();
            }

            playSound('powerup');

            // 移除能力道具
            gameArea.removeChild(powerup);
            gameConfig.powerups = gameConfig.powerups.filter(p => p.element !== powerup);
        }

        // 激活减速能力
        function activateSlow() {
            if (gameConfig.slowActive) return;

            gameConfig.slowActive = true;
            slowIndicator.classList.add('active');

            // 减速效果持续5秒
            const originalSpeed = gameConfig.gameSpeed;
            gameConfig.gameSpeed = Math.max(1, gameConfig.gameSpeed * 0.5);

            setTimeout(() => {
                gameConfig.slowActive = false;
                slowIndicator.classList.remove('active');
                gameConfig.gameSpeed = originalSpeed;
            }, 5000);
        }

        // 激活护盾能力
        function activateShield() {
            if (gameConfig.shieldActive) return;

            gameConfig.shieldActive = true;
            shieldIndicator.classList.add('active');
            shieldEffect.style.display = 'block';

            // 护盾效果持续5秒
            setTimeout(() => {
                gameConfig.shieldActive = false;
                shieldIndicator.classList.remove('active');
                shieldEffect.style.display = 'none';
            }, 5000);
        }

        // 移动障碍物
        function moveObstacles() {
            for (let i = gameConfig.obstacles.length - 1; i >= 0; i--) {
                const obstacle = gameConfig.obstacles[i];
                obstacle.y += obstacle.speed;
                obstacle.element.style.top = obstacle.y + 'px';

                // 检查是否击中玩家
                if (checkCollision(obstacle, {
                    x: gameConfig.playerX,
                    y: gameArea.offsetHeight - player.offsetHeight - 10,
                    width: player.offsetWidth,
                    height: player.offsetHeight
                })) {
                    // 如果护盾激活，只消耗护盾
                    if (gameConfig.shieldActive) {
                        gameConfig.shieldActive = false;
                        shieldIndicator.classList.remove('active');
                        shieldEffect.style.display = 'none';
                        playSound('shieldBlock');
                    } else {
                        // 击中玩家
                        hitPlayer();
                    }

                    gameArea.removeChild(obstacle.element);
                    gameConfig.obstacles.splice(i, 1);
                    continue;
                }

                // 移除超出屏幕的障碍物
                if (obstacle.y > gameArea.offsetHeight) {
                    gameArea.removeChild(obstacle.element);
                    gameConfig.obstacles.splice(i, 1);
                }
            }
        }

        // 检查碰撞
        function checkCollision(obj1, obj2) {
            return obj1.x < obj2.x + obj2.width &&
                   obj1.x + obj1.element.offsetWidth > obj2.x &&
                   obj1.y < obj2.y + obj2.height &&
                   obj1.y + obj1.element.offsetHeight > obj2.y;
        }

        // 玩家被击中
        function hitPlayer() {
            gameConfig.lives--;
            gameConfig.combo = 0; // 连击重置
            updateStats();
            playSound('hitPlayer');

            // 玩家闪烁效果
            player.style.background = 'linear-gradient(45deg, var(--danger), #ff6666)';
            setTimeout(() => {
                player.style.background = 'linear-gradient(45deg, var(--primary), var(--secondary))';
            }, 300);

            if (gameConfig.lives <= 0) {
                gameOver();
            }
        }

        // 显示等级提升动画
        function showLevelUp() {
            levelUpElement.textContent = `等级 ${gameConfig.level}!`;
            levelUpElement.style.display = 'block';
            playSound('levelUp');

            setTimeout(() => {
                levelUpElement.style.display = 'none';
            }, 1500);
        }

        // 游戏结束
        function gameOver() {
            gameConfig.gameActive = false;
            cancelAnimationFrame(gameConfig.animationId);

            // 更新最终统计
            finalScore.textContent = gameConfig.score;
            finalLevel.textContent = gameConfig.level;
            finalCombo.textContent = gameConfig.maxCombo;

            // 显示游戏结束界面
            gameOverlay.classList.add('active');
            playSound('gameOver');
        }

        // 游戏循环
        function gameLoop(timestamp) {
            if (!gameConfig.gameActive) return;

            spawnTarget(timestamp);
            spawnObstacle(timestamp);
            spawnPowerup(timestamp);
            moveObstacles();

            // 更新进度条
            const progress = (gameConfig.score % 100) || 0;
            progressBar.style.width = `${progress}%`;

            gameConfig.animationId = requestAnimationFrame(gameLoop);
        }

        // 播放音效
        function playSound(type) {
            if (!gameConfig.soundEnabled || !audioContext) return;

            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();

            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);

            let frequency, duration;

            switch (type) {
                case 'hit':
                    frequency = 523.25; // C5
                    duration = 0.1;
                    break;
                case 'hitPlayer':
                    frequency = 392; // G4
                    duration = 0.3;
                    break;
                case 'powerup':
                    frequency = 659.25; // E5
                    duration = 0.2;
                    break;
                case 'levelUp':
                    // 播放一个简单的升级旋律
                    playMelody([523.25, 659.25, 783.99]);
                    return;
                case 'shieldBlock':
                    frequency = 880; // A5
                    duration = 0.2;
                    break;
                case 'gameOver':
                    // 播放一个简单的失败旋律
                    playMelody([392, 349.23, 329.63]);
                    return;
                default:
                    frequency = 440; // A4
                    duration = 0.1;
            }

            oscillator.frequency.value = frequency;
            oscillator.type = 'sine';

            gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.001, audioContext.currentTime + duration);

            oscillator.start(audioContext.currentTime);
            oscillator.stop(audioContext.currentTime + duration);
        }

        // 播放旋律
        function playMelody(frequencies) {
            if (!gameConfig.soundEnabled || !audioContext) return;

            let time = audioContext.currentTime;

            frequencies.forEach((freq, index) => {
                setTimeout(() => {
                    const oscillator = audioContext.createOscillator();
                    const gainNode = audioContext.createGain();

                    oscillator.connect(gainNode);
                    gainNode.connect(audioContext.destination);

                    oscillator.frequency.value = freq;
                    oscillator.type = 'sine';

                    gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
                    gainNode.gain.exponentialRampToValueAtTime(0.001, audioContext.currentTime + 0.2);

                    oscillator.start(audioContext.currentTime);
                    oscillator.stop(audioContext.currentTime + 0.2);
                }, index * 200);
            });
        }

        // 事件监听器
        document.querySelectorAll('.difficulty-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelector('.difficulty-btn.active').classList.remove('active');
                this.classList.add('active');
                gameConfig.currentDifficulty = this.dataset.difficulty;
                initGame();
                playSound('hit');
            });
        });

        startBtn.addEventListener('click', startGame);

        restartBtn.addEventListener('click', function() {
            if (gameConfig.gameActive) {
                cancelAnimationFrame(gameConfig.animationId);
            }
            initGame();
            playSound('hit');
        });

        playAgainBtn.addEventListener('click', function() {
            gameOverlay.classList.remove('active');
            startGame();
        });

        changeDifficultyBtn.addEventListener('click', function() {
            gameOverlay.classList.remove('active');
            initGame();
        });

        // 鼠标移动控制玩家
        gameArea.addEventListener('mousemove', (e) => {
            if (!gameConfig.gameActive) return;

            const rect = gameArea.getBoundingClientRect();
            let x = e.clientX - rect.left - player.offsetWidth / 2;

            // 限制在游戏区域内
            if (x < 0) x = 0;
            if (x > gameArea.offsetWidth - player.offsetWidth) {
                x = gameArea.offsetWidth - player.offsetWidth;
            }

            gameConfig.playerX = x;
            player.style.left = x + 'px';
        });

        // 键盘控制（备用）
        document.addEventListener('keydown', (e) => {
            if (!gameConfig.gameActive) return;

            const playerWidth = player.offsetWidth;
            const gameWidth = gameArea.offsetWidth;

            if (e.key === 'ArrowLeft' || e.key === 'a') {
                gameConfig.playerX = Math.max(0, gameConfig.playerX - 20);
            } else if (e.key === 'ArrowRight' || e.key === 'd') {
                gameConfig.playerX = Math.min(gameWidth - playerWidth, gameConfig.playerX + 20);
            }

            player.style.left = gameConfig.playerX + 'px';
        });

        // 音效控制
        soundControl.addEventListener('click', function() {
            gameConfig.soundEnabled = !gameConfig.soundEnabled;
            this.innerHTML = gameConfig.soundEnabled ?
                '<i class="fas fa-volume-up"></i>' :
                '<i class="fas fa-volume-mute"></i>';

            // 播放状态切换音效
            if (gameConfig.soundEnabled) {
                playSound('hit');
            }
        });

        // 初始化粒子背景
        particlesJS("particles-js", {
            particles: {
                number: { value: 80, density: { enable: true, value_area: 800 } },
                color: { value: "#00c6ff" },
                shape: { type: "circle" },
                opacity: { value: 0.5, random: true },
                size: { value: 3, random: true },
                line_linked: {
                    enable: true,
                    distance: 150,
                    color: "#00c6ff",
                    opacity: 0.2,
                    width: 1
                },
                move: {
                    enable: true,
                    speed: 2,
                    direction: "none",
                    random: true,
                    straight: false,
                    out_mode: "out",
                    bounce: false
                }
            },
            interactivity: {
                detect_on: "canvas",
                events: {
                    onhover: { enable: true, mode: "repulse" },
                    onclick: { enable: true, mode: "push" },
                    resize: true
                }
            },
            retina_detect: true
        });

        // 初始化游戏
        initGame();
    </script>
</body>
</html>
